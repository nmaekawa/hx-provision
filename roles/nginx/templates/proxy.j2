
{% extends "strict_ssl_base.j2" %}


{% block custom_location %}

    {% if service_upload_max_size is defined and service_upload_max_size != '' %}
    client_max_body_size {{ service_upload_max_size }};
    {% endif %}

    location / {
        try_files $uri $uri/ @proxy_to_app;
    }

    {% if websockets is defined and websockets.service_daphne is defined %}
    location @proxy_to_app {
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_redirect off;

        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $http_host;
        proxy_read_timeout {{ gunicorn_timeout_seconds }};
        proxy_connect_timeout {{ gunicorn_timeout_seconds }};
        proxy_pass http://{{ websockets.service_daphne.host }}:{{ websockets.service_daphne.port }};
    }
    {% else %}
    location @proxy_to_app {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $http_host;
        proxy_read_timeout {{ gunicorn_timeout_seconds }};
        proxy_connect_timeout {{ gunicorn_timeout_seconds }};
        proxy_pass http://{{ service_gunicorn_host }}:{{ service_gunicorn_port }};
    }
    {% endif %}

{% endblock %}
