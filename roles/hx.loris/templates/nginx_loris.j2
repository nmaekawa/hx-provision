
server {
    listen {{ loris_varnish_backend_port }};
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;
    root {{ loris_www_path }}/;

    location = / {
        index index.html;
    }

    location  /harvard_logo.tif/full/full/0/default.jpg {
        alias {{ loris_www_path }}/harvard_logo.jpg;
    }

    location / {
        try_files $uri @proxy_to_app;
    }

    location @proxy_to_app {

        rewrite full/full /404.html last;     # do not server originals
        rewrite ^(.*)native(.*)$ $1default$2; # support iiif 1.0
        rewrite ^(.*)default$ $1default.jpg;  # ensure format present for iiif 2.0

        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_read_timeout {{ gunicorn_timeout_seconds }};
        proxy_connect_timeout {{ gunicorn_timeout_seconds }};
        proxy_intercept_errors on;
        proxy_pass http://127.0.0.1:{{ loris_port }};
    }

    location = /robots.txt {
        allow all;
        log_not_found off;
        access_log off;
    }
    location = /favicon.ico {
        log_not_found off;
        access_log off;
    }
    location /404.html {
        internal;
    }
    location /50x.html {
        internal;
    }
}
